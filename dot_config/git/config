# ğŸ§  Core settings
[core]
	editor = emacs
	pager = bat --paging=always --plain
	ignorecase = false

# ğŸ“¦ Init settings
[init]
	defaultBranch = main

# ğŸŒˆ Color settings
[color]
	ui = auto

# ğŸ” Diff tool and pager
[diff]
	tool = batdiff

[difftool "batdiff"]
	cmd = batdiff "$LOCAL" "$REMOTE"

[pager]
	diff = batdiff

# ğŸš€ Aliases
[alias]
	branches = for-each-ref --sort=-committerdate --format="%(color:blue)%(authordate:relative)\t%(color:red)%(authorname)\t%(color:reset)%(refname:short)" refs/remotes
	rsq = rebase -i --autosquash

# ğŸ“¤ Push behavior
[push]
	default = current

# ğŸ“¥ Fetch behavior
[fetch]
	prune = true

# ğŸ“¬ Pull behavior
[pull]
	rebase = true

# ğŸª„ Rebase options
[rebase]
	autosquash = true

# ğŸª¢ Merge options
[merge]
	ff = only

# ğŸ›°ï¸ Rewrite URLs to use SSH
[url "ssh://git@github.com/"]
	insteadOf = https://github.com/

[url "ssh://git@gitlab.com/"]
	insteadOf = https://gitlab.com/

[url "ssh://git@bitbucket.org/"]
	insteadOf = https://bitbucket.org/

# ğŸ§© Optional includes (e.g. user/email config)
[include]
	path = ~/.config/git/user_config
